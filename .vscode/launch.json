{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug TP3",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/tp3.out",
            "args": [
                "entrada.txt"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe",
            "setupCommands": [
                {
                    "text": "-enable-pretty-printing",
                    "description": "Enable GDB pretty printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
