{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++11",
                "${workspaceFolder}/src/main.cpp",
                "-I${workspaceFolder}/include",
                "-o",
                "${workspaceFolder}/bin/tp3.out"
            ],
            "group": "build",
            "problemMatcher": "$gcc"
        }
    ]
}
